{
    "experiment": "IceCube",
    "group":  "von Mises 2D", 

    "model_name":  "KHop",
    "angle_unitvec": "angle",
    "wandblog": true,

    "run_params":{
    "epochs":     50,
    "batch_size": 512,
    "early_stop": true,
    "zeniazi_metric":true,
    "patience":   5,
    "lr_schedule": "classic",
    "learning_rate":   1e-3,
    "warm_up": 3,
    "lr_decay": 0.9,
    "val_epoch":   10,
    "loss_func": "abs_vonMises2D_angle",
    "metrics": "energy_angle_zeniazi",
    "performance_plot": "performance_vM2D"
},

    "hyper_params": {
        "n_out":           3,
        "n_sigs":          2,
        "hidden_states":   64,
        "K":      2,        
        "agg_method":   "sum",
        "glob": true,
        "conv_layers":   1,
        "conv_activation": "relu",
        "decode_layers":   3,
        "decode_activation": 1,
        "dropout":         0.05,
        "regularization": "l2", 
        "batch_norm":      true,
        "forward":  true
    },

   "data_params":{ 
    "n_data": 1e5,
    "graph_construction":       "classic",
    "muon":             true,
    "n_neighbors":       10,
    "data_split":      [0.8, 0.1, 0.1],
    "restart":   false,
    "transform_path": "../db_files/muongun/transformers.pkl",
    "db_path": "../db_files/muongun/rasmus_classification_muon_3neutrino_3mio.db",
    "features":   ["dom_x", "dom_y", "dom_z", "time", "charge_log10", "SRTInIcePulses"],
    "targets":    ["energy_log10", "zenith","azimuth"],
    "skip": 0,
    "SRT": 0,
    "database": "MuonGun"
}
}
   